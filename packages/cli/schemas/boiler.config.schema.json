{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Boilerplate CLI Config Schema",
  "description": "Schema for boiler.config.json file",
  "required": ["projectName", "language", "framework", "architecture", "features", "createdAt", "cliVersion"],
  "properties": {
    "projectName": {
      "type": "string",
      "description": "Project name",
      "minLength": 1
    },
    "language": {
      "type": "string",
      "description": "Programming language",
      "enum": ["javascript", "typescript"]
    },
    "framework": {
      "type": "string",
      "description": "Backend framework",
      "enum": ["express", "fastify"]
    },
    "architecture": {
      "type": "string",
      "description": "Project architecture pattern",
      "enum": ["mvc", "layered"]
    },
    "orm": {
      "type": "string",
      "description": "ORM/ODM choice",
      "enum": ["none", "mongoose", "prisma"]
    },
    "database": {
      "type": "string",
      "description": "Database choice",
      "enum": ["mongodb", "postgresql"]
    },
    "features": {
      "type": "array",
      "description": "List of enabled features",
      "items": {
        "type": "string",
        "enum": ["auth", "logger", "cors", "rateLimit", "validation", "swagger", "testing"]
      },
      "uniqueItems": true
    },
    "createdAt": {
      "type": "string",
      "description": "Project creation date"
    },
    "cliVersion": {
      "type": "string",
      "description": "CLI version used to create the project",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    }
  },
  "additionalProperties": false
}